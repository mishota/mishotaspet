@model IEnumerable<MishPets.Models.Expense_Invoice>

@{
    ViewBag.Title = "Ваши спецификации";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Ваши счета</h2>*@

<p>
    @Html.ActionLink("Добавить", "CreateExpInv", new { InvoiceId = ViewBag.InvoiceID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Expense.TypeOfExpense)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice.InvoiceId)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.OverexposureContractId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SumExpense)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Expense.TypeOfExpense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice.InvoiceId)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.OverexposureContractId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumExpense)
            </td>
            <td>
                @*@Html.ActionLink("Добавить", "CreateExpInv", new { id = item.InvoiceId })*@
                @Html.ActionLink("Редактировать", "EditExpInv", new { Expense_InvoiceId = item.Expense_InvoiceId }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.Expense_InvoiceId }) |*@
                @Html.ActionLink("Удалить", "DeleteExpInv", new { Expense_InvoiceId = item.Expense_InvoiceId })
            </td>
        </tr>
    }

</table>

<input type="hidden" value="@ViewBag.OverexposureContractId" name="OverexposureContractId" />

<div>
    @Html.ActionLink("Назад к выставленным счетам", "ListInvoice", new { OverexposureContractId = ViewBag.OverexposureContractId })
</div>
<div>
    @Html.ActionLink("Назад к договорам передержки", "ListOverex")
</div>

