<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    
    <!-- Bootstrap -->
    @Styles.Render("~/bundles/styles")
    @RenderSection("Styles", false)

    @Scripts.Render("~/bundles/jquery")

    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />

    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <div class="container">
            @Html.Partial("_LoginPartial")
        </div>
       
        <!--Заставка-->
        <div class="container">
            
            <div class="item">
                <img src="~/Images/main1111.jpg" align="left" width="1150" vspace="10" alt="MishotasPets">
            </div>
        </div>

        

        <!--Меню-->
        <div class="container">
            <div class="navbar navbar-inverse">
                <div class="navbar-brand">MishotasPets</div>
                @Html.Action("Main", "Menu", new { c = Request.RequestContext.RouteData.Values["controller"] })
            </div>
        </div>
    </div>



    <!--необязательная боковая модель-->
    @RenderSection("SidePanel", required: false)

    <div class="container body-content">
        @RenderBody()
        
        <hr />

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-4 sitemap">
                     <h3>Наши контакты 029-7610225, 029-1363554 </h3> 
                    </div>
                    <div class="col-md-2 col-md-offset-6 socials">
                        <h5>СОЦИАЛЬНЫЕ СЕТИ</h5>
                        <a href="http://twitter.com/" class="social-icon twitter"></a>

                        <a href="http://facebook.com/" class="social-icon facebook"></a>
                        <a href="http://plus.google.com/" class="social-icon google"></a>
                    </div>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>


    @RenderSection("Scripts", false)
</body>
</html>
